<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:ignore="NewApi">true</item>
    </style>

    <style name="ToolbarCardWrapper" parent="CardView">
        <item name="android:layout_marginTop">-7dip</item>
        <item name="android:layout_marginLeft">-5dip</item>
        <item name="android:layout_marginRight">-5dip</item>
        <item name="cardBackgroundColor">?attr/colorPrimaryDark</item>
        <item name="cardElevation">4dip</item>
        <item name="cardCornerRadius">0dip</item>
    </style>

    <style name="BaseToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimaryDark</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    </style>

    <style name="ToolbarSubtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
    </style>

    <style name="SettingsCard" parent="CardView">
    </style>

    <style name="CardTitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:padding">@dimen/default_widget_interval</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="CardContent">
        <item name="android:padding">@dimen/default_widget_interval</item>
    </style>

    <style name="CardTitleSeparator">
        <item name="android:background">?colorPrimaryDark</item>
    </style>

    <!-- same label as in TextInputLayout-->
    <style name="BaseLabel" parent="TextAppearance.AppCompat.Small">
        <item name="android:paddingLeft">4dip</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RangeBarContainer">
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="RangeBar" parent="Base.Widget.AppCompat.SeekBar">
        <item name="selectorColor">?attr/colorAccent</item>
        <item name="connectingLineColor">?attr/colorAccent</item>
        <item name="pinRadius">0dip</item>
        <item name="tickHeight">0dip</item>
        <item name="selectorSize">6dip</item>
        <item name="barWeight">2dip</item>
        <item name="pinPadding">0dip</item>
        <item name="connectingLineWeight">3dip</item>
        <item name="rangeBarPaddingBottom">16dip</item>
        <item name="rangeBarColor">#33000000</item>
        <item name="android:layout_height">32dip</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">0dip</item>
    </style>


</resources>
